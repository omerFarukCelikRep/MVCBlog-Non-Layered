@model IEnumerable<MVCBlog.Models.DataAccess.Entities.DTOs.ArticleWithMemberDetail>

@{
    int i = 1;
}

<div class="fs-6 mb-3">
    <label class="bi-bar-chart"></label>
    TRENDING ON MEDIUM
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 border-0">
                <div class="col-12 d-flex">
                    <div class="border-end border-dark">
                        <span class="fs-5 me-2">@Html.Raw(i++)</span>
                    </div>
                    <div>
                        <img class="mx-3 img-28 rounded-circle" src="/Member/RetrieveImage/@item.MemberID" />
                        <a class="fs-6 text-decoration-none text-dark" asp-action="Details" asp-controller="Member" asp-route-id="@item.MemberID"><label>@Html.DisplayFor(modelItem => item.MemberName)</label></a>
                    </div>
                </div>
                <div class="ms-4">
                    <div class="card-body">
                        @using (Html.BeginForm("Index", "Article", FormMethod.Get))
                        {
                            <h5 class="card-title"><a class="text-decoration-none text-dark" asp-action="Index" asp-controller="Article" asp-route-id="@item.ArticleID">@Html.DisplayFor(modelItem => item.Title)</a></h5>
                        }
                    </div>
                    <div class="card-footer border-0 bg-white">
                        <small class="text-muted">
                            <label>@Html.DisplayFor(modelItem => item.CreatedDate)</label>
                            .
                            <label>@Html.DisplayFor(modelItem => item.ReadingTime)</label> mins read 
                            <label class="bi-star-fill"></label>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
